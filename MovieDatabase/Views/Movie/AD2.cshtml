@model IEnumerable<MovieDatabase.Models.Movie>
<H1>
    All Actors Born outside of the United States that are in Movies with a Rating Over 75
</H1>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FilmPoster)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActorBirthCountry)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActorFirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActorLastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RatingName)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model) { 

        <tr>

            <td>
                <img src="@Url.Content(item.FilmPoster)" width="100" height="150" alt="Film Poster" />
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.ActorBirthCountry)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.ActorFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActorLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RatingName)
            </td>
        </tr>
    }
</table>
